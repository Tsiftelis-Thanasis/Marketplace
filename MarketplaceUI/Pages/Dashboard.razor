@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<h2>Dashboard</h2>

<AuthorizeView>
    <Authorized>
    <div class="dashboard-container">
    <Card Title="Users" Link="/Users/users" Description="Manage and view all users." Icon="👤" />
    <Card Title="Items" Link="/Items/items" Description="View and manage items." Icon="📦" />
    <Card Title="Posts" Link="/Posts/posts" Description="Explore and approve posts." Icon="📝" />
    <Card Title="Transactions" Link="/Transactions/transactions" Description="Track and view transactions." Icon="💳" />
</div>
    </Authorized>
    <NotAuthorized>
        <p>You must be logged in to view this content.</p>
    </NotAuthorized>
</AuthorizeView>







